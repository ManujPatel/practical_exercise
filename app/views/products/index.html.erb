<h1>Products#index</h1>
<table border = "2px">
    <tr><center>Products Details </center></tr>
    <tr>
      <td>Name</td><td>Description</td><td>Price</td><td>Show</td>
      <%if current_user.admin? %>
        <td>Edit</td><td>Delete</td>
      <%end%>
    </tr>
    <% @products.each do |s| %>
      <tr>
        <td><%=s.name %></td>
        <td><%=s.description%></td>
        <td><%=s.price %></td>
        <td><%= button_to 'Show', product_path(s), method: :get%></td>
        <td>
          <%= form_with model: @order_item,  remote: true do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :product_id, value: s.id%>
            <%= f.number_field :quantity, value:1, min: 1%>
            <%= f.submit "Add To Cart"%>
          <%end%>
        </td>  
        <% if current_user.admin? %>
          <td><%= button_to 'Edit', edit_product_path(s), method: :get%></td>
          <td><%= button_to 'Remove', product_path(s), method: :delete%></td>  
        <%end%>
      </tr>
    <% end %>
  </table>

<%= button_to "Add New Product", new_product_path, method: :get%>